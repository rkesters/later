{
    "compilerOptions": {
        "outDir": "./dist/",
        "rootDir": "./src",
        "strict": true,
        "module": "commonjs",
        "target": "es6",
        "allowJs": false,
        "inlineSourceMap": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",
        "declaration": true,
        "lib": ["ES2017"],
        "resolveJsonModule": true,
    },
    "exclude": ["./tests/", "./node_modules/", "./dist/"],
    "include": ["./src"]
}
