{
    "compilerOptions": {
        "outDir": "./dist/",
        "strict": true,
        "module": "es6",
        "target": "es5",
        "allowJs": false,
        "inlineSourceMap": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",
        "declaration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "exclude": ["./tests/", "./node_modules/", "./dist/"],
    "include": ["./src"]
}
